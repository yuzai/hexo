    <%- js('js/star.js') %>
    <%- js('js/moon.js') %>
    <%- js('js/meteor.js') %>
    <%- js('js/main.js') %>
    <% }else { %>
    <%- js('js/general.js')%>
    <% if(is_archive() || is_category() || is_tag()) {%>
    <%- js('js/category.js') %>
    <% } %>
    <% if(is_post()) {%>
    <%- js('js/post.js') %>
    <% } %>
    <%- js('js/tag.js') %>
    <% } %>
